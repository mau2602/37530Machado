/* PEDIMOS AL USUARIO QUE INGRESE DOS NUMEROS Y CALCULAMOS
 LA SUMA DE LOS NUMEROS DESDE UNO HASTA EL OTRO INCLUSIVE */

let number1 = parseInt(prompt("Enter a positive number"))
let number2 = parseInt(prompt("Enter a bigger positive number"))
let sum = 0

if (number1 > 0 && number2 > 0){
    while (sum <= number2){
        for (let i = number1; i <= number2; i++ ){
            sum = sum + i;    
        } 
        console.log(sum)
        alert("The addition of the numbers from " + number1 + " to " + number2 + " is: " + sum + ".")
}
    }else{
    alert("You must enter 2 positive numbers")
}
